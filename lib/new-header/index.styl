/* Header */

header.new-header
  padding 20px 0
  background-color transparent
  border-bottom 1px solid $bg-color-gray

  .theme-dark &
    color rgba(255, 255, 255, 0.7)
    border-bottom 1px solid rgba(255, 255, 255, 0.1)

  a
    color currentColor

  .navbar
    margin-bottom 0 //Reset navbar default styles

  .navbar-logo
    float left
    margin 0
    position absolute
    top 50%
    transform translateY(-50%)

    > a
      display block
      background-image: url('//cdn.auth0.com/styleguide/latest/lib/logos/img/logo-grey.png')
      background-size contain
      background-repeat no-repeat
      width 100px
      height 36px
      color rgba(0, 0, 0, 0)
      font-size 0

  .navbar-bar
    float left
    list-style-type none
    margin 0
    padding 0

    &.navbar-left
      padding-left 120px

    .navbar-item
      float left
      position relative

      &:hover
        .navbar-dropdown
          opacity 1
          margin-top 5px
          visibility visible
          transition-delay 0s

        > a
          color black

          .theme-dark &
            color white

      [class^='icon']
        font-size 10px
        margin-left 5px

      > a
        float left
        padding 15px

      > button
        margin 15px
        margin-right 0

  .navbar-dropdown
    visibility hidden
    color $color-text
    opacity 0
    position absolute
    background-color white
    width 226
    border-radius 3px
    top 50px
    left 15px //Restore margin of the nav item
    margin-top 0
    border 1px solid $bg-color-gray
    box-shadow 0 2px 7px rgba(0,0,0,0.2)
    transition visibility 0s 0.2s, opacity 0.2s, margin-top 0.2s

    &.right-side
      left auto
      right 15px

    &.with-highlight
      height 344px
      width 627px

    > .options,
    > .highlight
      height 100%
      float left

    > .options
      list-style-type none
      width 225px
      padding 0

      a
        color currentColor
        padding 10px 15px
        display block
        border-bottom 1px solid $bg-color-gray

        &:hover
          background-color $bg-color-gray

    > .highlight
      width 400px
      border-left 1px solid $bg-color-gray

      .section-title
        font-size 14px
        margin 0
        padding 10px 15px
        line-height 2
        color rgba(black, 0.7)
        border-bottom 1px solid $bg-color-gray

      .highlight-content
        text-align center
        position absolute
        top calc(50% + 25px)
        transform translateY(-50%)

        .article-title,
        .article-content
          color $color-text

        img
          max-width 90px
          max-height 90px
          border-radius 50%

        .article-content
          padding 0 25px
          margin-bottom 0

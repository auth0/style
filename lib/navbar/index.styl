//
// Navbars
// --------------------------------------------------

// Basics of a navbar
$navbar-mobile-height ?=                  75px
$navbar-desktop-height ?=                  110px
$navbar-padding-horizontal ?=      floor($grid-gutter-width / 2)
$navbar-padding-vertical ?=        (($navbar-desktop-height - $line-height-computed) / 2)
$navbar-default-bg ?=              white

// Navbar links
$navbar-default-link-color ?=              $color-text-black
$navbar-default-link-hover-color ?=        black

// Navbar toggle
$navbar-default-toggle-icon-bar-bg ?=      $color-gray

.navbar
  position relative
  height $navbar-mobile-height // Ensure a navbar always shows (e.g., without a .navbar-brand in collapsed mode)
  clearfix()

  +breakpoint("desktop")
    height $navbar-desktop-height

  // Reset links color
  a
    color currentColor


.navbar-header
  clearfix()

  +breakpoint("desktop")
    float left


// Navbar collapse (body)
//
// Group your navbar content into this for easy collapsing and expanding across
// various device sizes. By default, this content is collapsed when <768px, but
// will expand past that for a horizontal display.
//
// To start (on mobile devices) the navbar links, forms, and buttons are stacked
// vertically and include a `max-height` to overflow in case you have too much
// content for the user's viewport.

.navbar-collapse
  overflow-x visible
  -webkit-overflow-scrolling touch
  clearfix()

  &.in
    overflow-y auto

  +breakpoint("desktop")
    width auto

    &.collapse
      display block !important
      height auto !important
      padding-bottom 0 // Override default setting
      overflow visible !important

    &.in
      overflow-y visible

// Both navbar header and collapse
//
// When a container is present, change the behavior of the header and collapse.

.container,
.container-fluid
  > .navbar-header,
  > .navbar-collapse
    margin-right (-($navbar-padding-horizontal))
    margin-left (-($navbar-padding-horizontal))

    +breakpoint("desktop")
      margin-right 0
      margin-left 0


// Brand/project name
//
// Includes Auth0 logo and hiring alert

.navbar-brand
  float left
  position relative
  width 100px
  height 36px
  navbar-vertical-align(36px, $navbar-mobile-height)
  margin-left $navbar-padding-horizontal

  +breakpoint("desktop")
    navbar-vertical-align(36px, $navbar-desktop-height)

    .navbar > .container &,
    .navbar > .container-fluid &
      margin-left (-($navbar-padding-horizontal))

  .logo
    display block
    width 100%
    height 100%
    background-image url('data:image/svg+xml;base64,')
    background-size contain
    background-repeat no-repeat
    font-size 0
    color rgba(0, 0, 0, 0)

  a.hiring
    display block
    position absolute
    top 6px //Vertical center
    left calc(100% + 10px)
    white-space nowrap
    background $color-blue-light
    text-transform uppercase
    font-weight 500
    padding 2px 8px 0 8px
    border-radius 3px
    color white
    font-size 11px
    line-height 22px

    +breakpoint("desktop")
      left: calc(-100% - 10px);

    &::after
      position: absolute;
      content: "";
      top: 6px;
      width: 0;
      height: 0;
      border-top: 5px solid transparent;
      border-bottom: 5px solid transparent;

      +breakpoint("desktop", "max")
        left: -4px;
        border-right: 5px solid #44C7F4;
        border-left: 0;

      +breakpoint("desktop")
        right: -4px;
        border-right: 0;
        border-left: 5px solid #44C7F4;



// Navbar toggle

.navbar-toggle
  position relative
  float right
  margin-right ($navbar-padding-horizontal - 10px)
  padding 10px
  navbar-vertical-align(38px, $navbar-mobile-height)
  background-color transparent
  background-image none // Reset unusual Firefox-on-Android default style see https://github.com/necolas/normalize.css/issues/214
  border 0

  // We remove the `outline` here, but later compensate by attaching `:hover`
  // styles to `:focus`.
  &:focus
    outline 0

  // Bars
  .icon-bar
    display block
    width 22px
    height 2px
    border-radius 1px

  .icon-bar + .icon-bar
    margin-top 6px

  +breakpoint("desktop")
    display none


// Navbar nav links
//
// Builds on top of the `.nav` components with its own modifier class to make
// the nav the full height of the horizontal nav (above 768px).

.navbar-nav

  > li > a
    position relative
    padding-top 20px
    padding-bottom 20px
    line-height 1.5

    +breakpoint("desktop", "max")
      .toggle-icon
        position absolute
        top 50%
        transform translateY(-50%)
        right $navbar-padding-horizontal

    +breakpoint("desktop")
      .toggle-icon
        font-size 10px
        margin-left 5px

  &.navbar-left
    +breakpoint("desktop")
      padding-left 30px

  &.navbar-right
    +breakpoint("desktop", "max")
      text-transform uppercase
      text-align center
      font-weight 500

      // Reset buttons styles
      .btn
        width 100%
        color inherit
        border 0
        box-shadow none
        font-size inherit
        line-height 1.5
        padding-top 20px
        padding-bottom 20px

    +breakpoint("desktop")
      .btn
        margin-top 16.5px
        margin-left 15px


  +breakpoint("desktop", "max")
    // Dropdowns get custom display when collapsed

    .open .dropdown-menu
      background-color $bg-color-gray
      position static
      float none
      width auto
      margin 0
      padding 0
      border 0
      box-shadow none
      border-radius 0

      > li > a
        line-height $line-height-computed
        padding 20px 15px
        border-bottom 1px solid rgba(0, 0, 0, 0.10)

        &:hover
          background-color transparent

      > li:last-child a
          border-bottom 0

  // Uncollapse the nav
  +breakpoint("desktop")
    float left
    margin 0

    > li
      float left
      > a
        // padding-top $navbar-padding-vertical
        // padding-bottom $navbar-padding-vertical


  // Undo 100% width for pull classes
  +breakpoint("desktop")
    width auto
    border 0
    margin-left 0
    margin-right 0
    padding-top 0
    padding-bottom 0
    box-shadow none


// Dropdown menus

// Menu position and menu carets
.navbar-nav > li > .dropdown-menu
  margin-top 0
  border-top-radius(0)


// Component alignment
//
// Repurpose the pull utilities as their own navbar utilities to avoid specificity
// issues with parents and chaining. Only do this when the navbar is uncollapsed
// though so that navbar contents properly stack and align in mobile.
//
// Declared after the navbar components to ensure more specificity on the margins.

+breakpoint("desktop")
  .navbar-left
    float left !important

  .navbar-right
    float right !important
    margin-right -($navbar-padding-horizontal)

    ~ .navbar-right
      margin-right 0



// Default navbar
.navbar-default
  border-bottom 1px solid rgba(0, 0, 0, 0.15)

  .navbar-nav

    > li > a
      &:hover,
      &:focus
        color $navbar-default-link-hover-color
        background-color transparent

    +breakpoint("desktop", "max")
      > li
        border-bottom 1px solid rgba(0, 0, 0, 0.05)
        background-color white

      > .active > a
        &,
        &:hover,
        &:focus
          color $navbar-default-link-active-color

    +breakpoint("desktop")
      navbar-vertical-align(61px, $navbar-desktop-height)

  .navbar-toggle .icon-bar
    background-color $navbar-default-toggle-icon-bar-bg

  // Dropdown menu items
  .navbar-nav
    // Remove background color from open dropdown
    > .open > a
      &,
      &:hover,
      &:focus
        color $navbar-default-link-active-color
        background-color transparent

    +breakpoint("desktop", "max")
      // Dropdowns get custom display when collapsed
      .open .dropdown-menu
        > li > a
          color $navbar-default-link-color
          background-color transparent

<mjml>
  <mj-head>
    <mj-attributes>
      <%- include('../_modules/defaults') %>
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-container background-color="#E3E5E7">
      <mj-section background-color="white">
        <mj-column width="100%" vertical-align="top">
          <mj-image width="80" src="https://cdn.auth0.com/styleguide/components/1.0.5/media/logos/img/logo-blue.png" href="https://auth0.com/" alt="auth0"></mj-image>
        </mj-column>
      </mj-section>
      
      <%- include('../_modules/hero', {
        title: "Welcome to You App!",
        image: "https://cdn.auth0.com/website/email-templates/product/assets/top-email.svg"
      }) %>

     <mj-section background-color="white" padding="20px 15px 5px">
        <mj-column width="100%" vertical-align="top" padding="10px 20px">
          <mj-text align="left" font-size="18px" padding="20px 20px 0 20px">
            Your emails will be sent from smtp.gmail.com, on port 465, using Gmail as provider.
          </mj-text>
          <mj-text align="left" font-weight="500" font-size="18px" padding="20px 20px 0 20px">
            <strong font-weight="500"> This is your updated configuration</strong>
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="white" padding="10px 40px 40px">
        <mj-column width="100%" padding-left="0px" padding-right="0px" padding-top="0px" padding-bottom="0px" border-left="#E3E5E7 1px solid" border-right="#E3E5E7 1px solid" border-top="#E3E5E7 1px solid" border-bottom="#E3E5E7 1px solid">

          <mj-table>
            <tr style="text-align:left; font-size: 16px; border-bottom: 1px solid #E3E5E7;">
              <td style="vertical-align: text-top; padding:15px;">
                <strong style="font-weight: 500;">Host</strong>
              </td>
              <td style="vertical-align: text-top; padding:15px;">
                <strong style="font-weight: 500;">Port</strong>
              </td>
              <td style="vertical-align: text-top; padding:15px;">
                <strong style="font-weight: 500;">Provider</strong>
              </td>
            </tr>

            <tr style="text-align:left; font-size: 16px;">
              <td style="vertical-align: text-top; padding:15px;">smtp.gmail.com</td>
              <td style="vertical-align: text-top; padding:15px;">465</td>
              <td style="vertical-align: text-top; padding:15px;">Gmail</td>
            </tr>

          </mj-table>
        </mj-column>
      </mj-section>

      <mj-section background-color="#F5F7F9">
        <mj-column width="100%" vertical-align="top">
          <mj-text font-size="13px" padding="0 60px 0 60px" line-height="20px">
             You’re receiving this email because you have and Auth0 account.If you’d rather not see us in your inbox in the future <a href="{{unsubscribe_url}}" style="color:#0a84ae;text-decoration:none">unsubscribe</a>.
          </mj-text>
        </mj-column>
      </mj-section>
    <mj-container>
  </mj-body>
</mjml>

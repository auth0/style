@import '@auth0/styleguide-core/src/vars'
@import '@auth0/styleguide-core/src/mixins'

.auth0-html-styleguide

  .a0r-sidebar
    position: fixed;

    +breakpoint("tablet", "max")
      top: 0;

  .styleguide-content
    overflow-y: auto;
    margin-top: 70px;

    +breakpoint("tablet")
      margin-top: 0;
      margin-left: 250px;

    .jumbotron
      margin-bottom 0

      +breakpoint("tablet", "max")
        padding-top: 40px;
        padding-bottom: 40px;

      h2 img
        max-width: 48px;

    .section-content
      > section
        padding: 32px;
        border-bottom: 1px solid #e3e5e7;

        +breakpoint("tablet")
          padding: 32px 90px 64px;

        > h2
          margin-top: 0;
          padding-top: 32px;

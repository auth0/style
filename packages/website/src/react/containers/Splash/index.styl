@import '@auth0/styleguide-core/src/vars'
@import '@auth0/styleguide-core/src/mixins'

.splash-page
  padding 20px

  +breakpoint("desktop")
    padding 60px

  .splash-title
    font-size 30px
    margin-bottom 50px

  .splash-section
    margin-bottom 80px

    &:last-child
      margin-bottom 0

    .splash-subtitle
      font-size 22px
      margin-bottom 20px

  .example-box
    margin-bottom 30px

    > p
      color $gray-light
      font-size 16px
      margin-bottom 10px
